package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

android_test {
    name: "CtsAppFgsStartTestCases",
    defaults: ["cts_defaults"],
    libs: [
        "android.test.runner",
        "android.test.base",
    ],
    static_libs: [
        "androidx.test.rules",
        "compatibility-device-util-axt",
        "am_flags_lib",
        "flag-junit",
    ],
    srcs: [
        "test/src/**/*.java",
        "helper/src/**/*.java",
    ],
    test_suites: [
        "cts",
        "general-tests",
    ],
    manifest: "test/AndroidManifest.xml",
    data: [
        ":CtsFgsStartTestHelperCurrent",
        ":CtsFgsStartTestHelperApi34",
    ],
    per_testcase_directory: true,
}

android_test_helper_app {
    name: "CtsFgsStartTestHelperCurrent",
    defaults: ["cts_support_defaults"],
    srcs: [
        "helper/src/**/*.java",
    ],
    test_suites: [
        "general-tests",
        "cts",
    ],
    package_name: "android.app.fgsstarttesthelpercurrent",
    manifest: "helper/AndroidManifest.xml",
}

android_test_helper_app {
    name: "CtsFgsStartTestHelperApi34",
    defaults: ["cts_support_defaults"],
    srcs: [
        "helper/src/**/*.java",
    ],
    test_suites: [
        "general-tests",
        "cts",
    ],
    manifest: "helper/AndroidManifest.xml",
    package_name: "android.app.fgsstarttesthelper34",
    target_sdk_version: "34",
}
