package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

android_test {
    name: "CtsBroadcastTestCases",
    defaults: ["cts_defaults"],
    static_libs: [
        "androidx.test.ext.junit",
        "androidx.test.rules",
        "compatibility-device-util-axt",
        "guava",
        "truth-prebuilt",
        "testng",
    ],
    srcs: [
        "src/**/*.java",
        ":CtsBroadcastsTestsCommon",
    ],
    test_suites: [
        "cts",
        "general-tests",
    ],
    platform_apis: true,
    data: [
        ":CtsBroadcastsTestHelper",
        ":CtsBroadcastsTestHelper2",
    ],
    per_testcase_directory: true,
}

android_test_helper_app {
    name: "CtsBroadcastsTestHelper",
    defaults: ["cts_defaults"],
    static_libs: [
        "androidx.test.ext.junit",
        "truth-prebuilt",
    ],
    srcs: [
        "helper-app/src/**/*.java",
        ":CtsBroadcastsTestsCommon",
    ],
    test_suites: [
        "cts",
        "general-tests",
    ],
    manifest: "helper-app/AndroidManifest.xml",
    platform_apis: true,
}

android_test_helper_app {
    name: "CtsBroadcastsTestHelper2",
    defaults: ["cts_defaults"],
    static_libs: [
        "androidx.test.ext.junit",
        "truth-prebuilt",
    ],
    srcs: [
        "helper-app/src/**/*.java",
        ":CtsBroadcastsTestsCommon",
    ],
    test_suites: [
        "cts",
        "general-tests",
    ],
    manifest: "helper-app/AndroidManifest.xml",
    aaptflags: [
        "--rename-manifest-package com.android.app.cts.broadcasts.helper2",
    ],
    platform_apis: true,
}

filegroup {
    name: "CtsBroadcastsTestsCommon",
    srcs: [
        "common/src/**/*.aidl",
        "common/src/**/*.java",
    ],
    path: "common/src",
}
