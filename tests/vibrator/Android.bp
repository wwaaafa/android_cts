package {
    default_team: "trendy_team_haptics_framework",
    default_applicable_licenses: ["Android-Apache-2.0"],
}

android_test {
    name: "CtsVibratorTestCases",
    defaults: ["cts_defaults"],
    compile_multilib: "both",
    static_libs: [
        "android.os.vibrator.flags-aconfig-java",
        "androidx.test.core",
        "androidx.test.ext.junit",
        "androidx.test.rules",
        "ctstestrunner-axt",
        "testng",
        "truth",
        "guava",
        "junit",
        "junit-params",
        "flag-junit",
        "CtsMockInputMethodLib",
        "hamcrest-library",
    ],
    jni_uses_platform_apis: true,
    jni_libs: [
        "libcts_jni",
        "libctsos_jni",
        "libnativehelper_compat_libc++",
    ],
    srcs: [
        "src/**/*.java",
    ],
    // Set its own test config to prevent sharing with cts-platform-version-check
    test_config: "AndroidTest.xml",
    // Tag this module as a cts test artifact
    test_suites: [
        "cts",
        "general-tests",
        "sts",
        "mts-documentsui",
    ],
    sdk_version: "test_current",
    libs: [
        "android.test.runner",
        "android.test.base",
    ],
    // Do not compress minijail policy files.
    aaptflags: ["-0 .policy"],
    min_sdk_version: "29",
    per_testcase_directory: true,
}
