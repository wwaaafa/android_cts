<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="android.content.cts.contenturitestapp" >

    <!-- Permission for all paths in TestProvider other than those defined in path-permission -->
    <permission android:name="android.permission.GENERAL_TEST_PROVIDER_PERMISSION" />

    <!-- Irrelevant permission to ensure that test apps don't have it -->
    <permission android:name="android.permission.TEST_PROVIDER_UNUSED_PERMISSION" />

    <!-- Read permission for "/only.read" path in TestProvider -->
    <permission android:name="android.permission.ONLY_READ_TEST_PROVIDER_READ_PERMISSION" />

    <!-- Write permission for "/only.write" path in TestProvider -->
    <permission android:name="android.permission.ONLY_WRITE_TEST_PROVIDER_WRITE_PERMISSION" />

    <!-- Permission for "/read.write" path in TestProvider -->
    <permission android:name="android.permission.READ_WRITE_TEST_PROVIDER_PERMISSION" />

    <application>
        <service android:name=".TestService"
            android:exported="true" />

        <provider android:name=".TestProvider"
            android:exported="true"
            android:grantUriPermissions="true"
            android:authorities="android.content.cts.contenturitestapp.provider"
            android:permission="android.permission.GENERAL_TEST_PROVIDER_PERMISSION">

            <path-permission android:pathPrefix="/only.read"
                android:readPermission="android.permission.ONLY_READ_TEST_PROVIDER_READ_PERMISSION"
                android:writePermission="android.permission.TEST_PROVIDER_UNUSED_PERMISSION" />

            <path-permission android:pathPrefix="/only.write"
                android:readPermission="android.permission.TEST_PROVIDER_UNUSED_PERMISSION"
                android:writePermission="android.permission.ONLY_WRITE_TEST_PROVIDER_WRITE_PERMISSION" />

            <path-permission android:pathPrefix="/read.write"
                android:permission="android.permission.READ_WRITE_TEST_PROVIDER_PERMISSION" />
        </provider>
    </application>
</manifest>
