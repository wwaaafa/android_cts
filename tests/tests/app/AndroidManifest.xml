<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.app.cts">

    <permission android:name="android.permission.COMPONENT_CALLER_TEST_PROVIDER_UNUSED_PERMISSION" />

    <uses-permission android:name="android.permission.COMPONENT_CALLER_HELPER_PATH_PROVIDER_READ_PERMISSION" />

    <application>
        <uses-library android:name="android.test.runner" />

        <activity android:name=".ApplyOverrideConfigurationActivity"
                  android:configChanges="orientation|screenSize|smallestScreenSize|screenLayout" />

        <activity android:name=".PictureInPictureActivity"
                  android:resizeableActivity="false"
                  android:supportsPictureInPicture="true"
                  android:configChanges="orientation|screenSize|smallestScreenSize|screenLayout" />

        <activity android:name=".ShareIdentityTest$ShareIdentityTestActivity"
                  android:exported="true" />

        <activity android:name=".ShareIdentityTest$ActivityCallerShareIdentityTestActivity"
            android:exported="true" />

        <receiver android:name=".ShareIdentityTest$ShareIdentityTestReceiver"
                  android:exported="true">
            <intent-filter>
                <action android:name="android.app.cts.SHARE_IDENTITY_TEST_MANIFEST_ACTION" />
            </intent-filter>
        </receiver>

        <activity android:name=".ComponentCallerTest$TestActivity"
            android:exported="true" />

        <receiver android:name=".ComponentCallerTest$TestReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.app.cts.ACTIVITY_CALLER_ACTION" />
            </intent-filter>
        </receiver>

        <provider android:name=".ComponentCallerTest$TestProvider"
            android:exported="true"
            android:grantUriPermissions="true"
            android:authorities="android.app.cts.componentcaller.provider"
            android:permission="android.permission.COMPONENT_CALLER_TEST_PROVIDER_UNUSED_PERMISSION" />
    </application>

    <instrumentation android:name="androidx.test.runner.AndroidJUnitRunner"
                     android:targetPackage="android.app.cts"
                     android:label="CTS tests of android.app">
    </instrumentation>

</manifest>

