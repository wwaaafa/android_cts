<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="android.media.cujcommon.cts">

  <application
    android:allowBackup="true"
    android:usesCleartextTraffic="true">
    <activity
      android:exported="true"
      android:name="android.media.cujcommon.cts.MainActivity"
      android:theme="@style/Theme.AppCompat"
      android:configChanges="orientation|screenSize">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
      android:exported="true"
      android:name="android.media.cujcommon.cts.ScrollTestActivity"
      android:theme="@style/Theme.AppCompat"
      android:configChanges="orientation|screenSize">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <uses-library android:name="org.apache.http.legacy" />
    <uses-library android:name="android.test.runner" />
    <service
      android:name="android.media.cujcommon.cts.CallNotificationService"
      android:label="Call Notification Service"
      android:permission="android.permission.BIND_TELECOM_CONNECTION_SERVICE"
      android:exported="false">
      <intent-filter>
        <action android:name="android.telecom.ConnectionService"/>
      </intent-filter>
    </service>
  </application>
</manifest>

