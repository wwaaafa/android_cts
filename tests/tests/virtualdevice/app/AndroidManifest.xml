<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.virtualdevice.streamedtestapp">

    <!--
    * This permission is only used to trigger a permission request dialog in some test cases of
    * VirtualDevicePermissionTest. This app otherwise does not use this permission.
    -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application>
        <activity android:name=".HomeActivity"
            android:launchMode="singleTop"
            android:enabled="false"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.HOME"/>
                <category android:name="android.intent.category.SECONDARY_HOME"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:name=".CustomHomeActivity"
            android:launchMode="singleTop"
            android:exported="true" />

        <activity android:name=".ClipboardTestActivity"
            android:exported="true"/>

        <activity android:name=".PermissionTestActivity"
            android:exported="true"/>
    </application>

</manifest>

