<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.virtualdevice.cts.applaunch">

    <queries>
        <package android:name="android.virtualdevice.streamedtestapp" />
    </queries>

    <application>
        <uses-library android:name="android.test.runner" />
        <activity
            android:name="android.virtualdevice.cts.applaunch.util.EmptyActivity"
            android:allowEmbedded="true"
            android:exported="false" />
        <activity
            android:name="android.virtualdevice.cts.applaunch.util.SecondActivity"
            android:allowEmbedded="true"
            android:exported="false" />
        <service android:name="android.virtualdevice.cts.applaunch.util.TestService" />
        <activity
            android:name="android.virtualdevice.cts.applaunch.util.InterceptedActivity"
            android:allowEmbedded="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.virtualdevice.applaunch.util.INTERCEPTED_RECEIVER" />
            </intent-filter>
        </activity>
    </application>

    <uses-feature android:name="android.software.companion_device_setup" />

    <instrumentation android:name="androidx.test.runner.AndroidJUnitRunner"
                     android:targetPackage="android.virtualdevice.cts.applaunch"
                     android:label="CTS tests of android.companion.virtual applaunch functionality">
    </instrumentation>

</manifest>

