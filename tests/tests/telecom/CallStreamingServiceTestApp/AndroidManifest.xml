<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="android.telecom.cts.streamingtestapp"
          android:versionCode="1"
          android:versionName="1.0"
          android:sharedUserId="android.telecom.cts">

    <application android:label="CallStreamingTestApp">
        <service android:name=".CallStreamingService"
                 android:permission="android.permission.BIND_INCALL_SERVICE"
                 android:launchMode="singleInstance"
                 android:exported="true">
            <intent-filter>
                <action android:name="android.telecom.InCallService"/>
            </intent-filter>
            <meta-data android:name="android.telecom.STREAMING_TETHERED_CALLS"
                       android:value="true" />
            <meta-data android:name="android.telecom.INCLUDE_EXTERNAL_CALLS"
                       android:value="true" />
        </service>
        <service android:name=".CallStreamingServiceControl"
                 android:exported="true">
            <intent-filter>
                <action android:name="android.telecom.cts.streamingtestapp.ACTION_CONTROL_CALL_STREAMING_SERVICE"/>
            </intent-filter>
        </service>
    </application>
</manifest>
