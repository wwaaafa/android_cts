<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="android.telecom.cts.nonuiincallservicewoexport"
          android:versionCode="1"
          android:versionName="1.0"
          android:sharedUserId="android.telecom.cts">

    <!-- sdk 15 is the max for read call log -->
    <uses-sdk android:minSdkVersion="15"/>

    <uses-permission android:name="android.permission.READ_CALL_LOG"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.CALL_COMPANION_APP"/>
    <uses-permission android:name="android.permission.MANAGE_ONGOING_CALLS"/>
    <uses-permission android:name="android.permission.CONTROL_INCALL_EXPERIENCE"/>

    <application android:label="InCallServiceWoExport"
                 android:debuggable="true">

        <service android:name=".CtsNonUiInCallServiceWoExport"
                 android:permission="android.permission.BIND_INCALL_SERVICE"
                 android:launchMode="singleInstance"
                 android:enabled="true"
                 android:exported="false"> <!-- NOTE: exported is purposely set to false! -->

            <intent-filter>
                <action android:name="android.telecom.InCallService"/>
            </intent-filter>

            <meta-data android:name="android.telecom.IN_CALL_SERVICE_UI"
                       android:value="false"/><!-- NOTE: this is a NON-Ui-InCallService! -->
            <meta-data android:name="android.telecom.INCLUDE_EXTERNAL_CALLS"
                       android:value="true"/>
            <meta-data android:name="android.telecom.INCLUDE_SELF_MANAGED_CALLS"
                       android:value="true"/>
        </service>


        <service android:name=".CtsNonUiInCallServiceWoExportControl"
                 android:launchMode="singleInstance"
                 android:exported="true">
            <intent-filter>
                <action
                    android:name="android.telecom.cts.nonuiincallservicewoexport.ACTION_iCSWE_CONTROL"/>
            </intent-filter>
        </service>

    </application>


</manifest>