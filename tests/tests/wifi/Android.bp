package {
    default_team: "trendy_team_fwk_wifi_hal",
    default_applicable_licenses: ["Android-Apache-2.0"],
}

java_defaults {
    name: "CtsWifiLastStableSdkDefaults",
    target_sdk_version: "34",
    min_sdk_version: "30",
}

android_test {
    name: "CtsWifiTestCases",
    defaults: [
        "cts_defaults",
        "CtsWifiLastStableSdkDefaults",
    ],

    // Include both the 32 and 64 bit versions
    compile_multilib: "both",

    libs: [
        "android.test.base",
    ],

    srcs: [
        "src/android/net/wifi/aware/cts/*.java",
        "src/android/net/wifi/cts/*.java",
        "src/android/net/wifi/mockwifi/cts/*.java",
        "src/android/net/wifi/p2p/cts/*.java",
        "src/android/net/wifi/passpoint/cts/*.java",
        "src/android/net/wifi/rtt/cts/*.java",
    ],
    jarjar_rules: "jarjar-rules.txt",
    static_libs: [
        "androidx.test.rules",
        "compatibility-device-util-axt",
        "ctstestrunner-axt",
        "junit",
        "junit-params",
        "net-utils-framework-common",
        "truth",
        "android.wifi.mockwifi",
        "wifi_aconfig_flags_lib",
        "flag-junit",
    ],

    test_suites: [
        "cts",
        "general-tests",
        "mts-tethering",
        "mts-wifi",
        "mcts-tethering",
        "mcts-wifi",
        "sts",
    ],

    data: [
        ":CtsWifiLocationTestApp",
    ],

    platform_apis: true,
}

android_test {
    name: "CtsWifiNonUpdatableTestCases",
    defaults: [
        "cts_defaults",
    ],

    // Include both the 32 and 64 bit versions
    compile_multilib: "both",

    libs: [
        "android.test.base",
    ],

    srcs: [
        "src/android/net/wifi/nl80211/cts/*.java",
        "src/android/net/wifi/shareconnectivity/*.java",
    ],
    static_libs: [
        "androidx.test.rules",
        "compatibility-device-util-axt",
        "ctstestrunner-axt",
        "junit",
        "junit-params",
        "net-utils-framework-common",
        "truth",
        "wifi_aconfig_flags_lib",
        "android.net.wifi.flags-aconfig-java",
        "flag-junit",
    ],
    test_config: "NonUpdatable.xml",
    manifest: "NonUpdatableAndroidManifest.xml",

    test_suites: [
        "cts",
        "general-tests",
    ],
    platform_apis: true,
}
