package {
    // See: http://go/android-license-faq
    default_applicable_licenses: [
        "Android-Apache-2.0",
        "cts_tests_tests_media_license", // CC-BY
    ],
}

java_defaults {
    name: "CtsMediaProjectionDefaults",
    defaults: ["cts_defaults"],
    // include both the 32 and 64 bit versions
    compile_multilib: "both",
    static_libs: [
        "ctstestrunner-axt",
        "cts-media-common",
        "cts-wm-util",
        "junit",
        "junit-params",
        "testng",
        "truth",
    ],
    // This test uses private APIs
    platform_apis: true,
    jni_uses_sdk_apis: true,
    // Tag this module as a cts test artifact
    test_suites: [
        "cts",
        "general-tests",
        "mts-media",
        "mcts-media",
    ],
    host_required: ["cts-dynamic-config"],
}

android_test {
    name: "CtsMediaProjectionTestCases",
    defaults: ["CtsMediaProjectionDefaults"],
    srcs: [
        "src/android/media/projection/cts/*.java",
    ],
    min_sdk_version: "33",
    target_sdk_version: "33",
}
