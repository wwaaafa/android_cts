<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.telecom.cts.apps.managedapp"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />

    <application android:label="ManagedApp">

        <service
            android:name=".ManagedAppControl"
            android:launchMode="singleInstance"
            android:exported="true">
            <intent-filter>
                <action android:name="android.telecom.cts.apps.managedapp.BIND" />
            </intent-filter>
        </service>

        <service
            android:name=".ManagedConnectionService"
            android:permission="android.permission.BIND_TELECOM_CONNECTION_SERVICE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.telecom.ConnectionService" />
            </intent-filter>
        </service>

    </application>

</manifest>
