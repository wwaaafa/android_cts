<configuration description="Config for CTS Provider test cases">
    <option name="test-suite-tag" value="cts" />

    <option name="config-descriptor:metadata" key="component" value="framework" />
    <!-- Instant apps can't access the system providers. -->
    <option name="config-descriptor:metadata" key="parameter" value="not_instant_app" />
    <option name="config-descriptor:metadata" key="parameter" value="not_multi_abi" />
    <option name="config-descriptor:metadata" key="parameter" value="secondary_user" />
    <option name="config-descriptor:metadata" key="parameter" value="no_foldable_states" />

    <target_preparer class="com.android.tradefed.targetprep.suite.SuiteApkInstaller">
        <option name="cleanup-apks" value="true" />
        <option name="test-file-name" value="CtsContactKeysManagerTestCases.apk" />
        <option name="test-file-name" value="CtsContactKeysProviderInvisibleApp.apk" />
        <option name="test-file-name" value="CtsContactKeysProviderVisibleApp.apk" />
    </target_preparer>

    <!-- Start this service here so that CTS can't query it. -->
    <target_preparer class="com.android.tradefed.targetprep.RunCommandTargetPreparer">
        <option name="run-command" value="am start-foreground-service android.provider.cts.invisibleapp/.InvisibleService" />
        <option name="teardown-command" value="am stop-service android.provider.cts.invisibleapp" />
        <option name="teardown-command" value="pm uninstall android.provider.cts.visibleapp" />
        <option name="teardown-command" value="pm uninstall android.provider.cts.invisibleapp" />
    </target_preparer>

    <test class="com.android.tradefed.testtype.AndroidJUnitTest" >
        <option name="runner" value="androidx.test.runner.AndroidJUnitRunner" />
        <option name="package" value="android.provider.cts.contactkeys" />
    </test>

</configuration>
