        ":CtsDeviceDisplaySizeApp",
        ":CtsDevicePrereleaseSdkApp",
        ":CtsDeviceProfileableApp",
        ":CtsDeviceTranslucentTestApp",
        ":CtsDeviceTranslucentTestApp26",
