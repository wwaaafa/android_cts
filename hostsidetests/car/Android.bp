package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

java_test_host {
    name: "CtsCarHostTestCases",
    defaults: ["cts_defaults"],
    // Only compile source java files in this apk.
    srcs: [
        "src/**/*.java",
        "app/src/android/car/cts/app/PowerPolicyTestCommandStatus.java",
        "app/src/android/car/cts/app/PowerPolicyTestCommandType.java",
        ":cartelemetryservice-proto-srcs",
        ":car-service-dump-proto-srcs",
    ],
    proto: {
        type: "lite",
    },
    libs: [
        "compatibility-host-util",
        "cts-tradefed",
        "libprotobuf-java-full",
        "tradefed",
        "truth",
    ],
    // tag this module as a cts test artifact
    test_suites: [
        "cts",
        "general-tests",
        "automotive-tests",
        "automotive-general-tests",
    ],
    static_libs: [
        "android.car.feature-aconfig-java-host",
        "car-cts-host-util",
        "cts-statsd-atom-host-test-utils",
        "flag-junit-host",
    ],
    data: [
        ":CtsCarApp",
        ":CtsCarWatchdogSharedApp",
        ":CtsCarWatchdogSecondSharedApp",
        ":CtsCarWatchdogDeviceTestApp",
    ],
}
